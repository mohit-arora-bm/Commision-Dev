<aura:component controller="AC_CreateTeamAdjustmentController">
    <aura:attribute name="team" type="sObject"/>
    <aura:attribute name="teamId" type="String"/>
    <aura:attribute name="teamAdjRecordId" type="String" default=""/>
    <aura:attribute name="period" type="String"/>
    <aura:attribute name="oldRecord" type="Object"/>
    <aura:attribute name="periodId" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:registerEvent name="refreshEmp" type="c:AC_DataRowEvent"/>
    <section role="dialog" aria-modal="true" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <header class="slds-modal__header">
                <h2 class="slds-text-heading_medium slds-hyphenate">Adjustment</h2>
            </header>
            <lightning:recordEditForm
                onsubmit="{!c.handleSubmit}"
                recordId="{!v.teamAdjRecordId}"
                objectApiName="agileComp__commissionAdjustmentDetail__c">
                <div class="slds-modal__content slds-p-around_medium">
                    <center>
                        <lightning:messages />
                        <lightning:input name="period" disabled="true" value="{!v.period}" label="Period" />
                        <c:AC_DynamicRecordLookup objectAPIName="agileComp__Commission_Team__c" selectedRecord="{!v.team}"/>
                        <lightning:inputField fieldName="agileComp__Type__c" />
                        <lightning:inputField fieldName="agileComp__Adjustment_Type__c" />
                        <lightning:inputField fieldName="agileComp__Adjustment_Amount__c"  />
                        <lightning:inputField fieldName="agileComp__Adjustment_Description__c" />
                    </center>
                </div>
                <footer class="slds-modal__footer">
                    <lightning:button variant="brand" type="submit" name="save" label="Save" />
                    <lightning:button label="Cancel" title="Cancel" onclick="{! c.Cancel }"/>
                </footer>
            </lightning:recordEditForm>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open"></div>
</aura:component>